<h1>Listing Nav Entries for <%= @system.name + ' (Version: ' + @system.version + ')' %></h1>

<table>
  <tr>
    <th>Seq</th>
    <th>Content</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nav_entries.each do |nav_entry| %>
  <tr>
    <td><%= nav_entry.seq %></td>
    <td><%= nav_entry.content %></td>
    <td><%= nav_entry.description %></td>
    <td><%= link_to 'Show', system_nav_entry_path(@system, nav_entry) %></td>
    <td><%= link_to 'Edit', edit_system_nav_entry_path(@system, nav_entry) %></td>
    <td><%= link_to 'Destroy', system_nav_entry_path(@system, nav_entry), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

